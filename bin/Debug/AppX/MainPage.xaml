                                    </StackPanel>
                                </StackPanel>
                            </GridViewItem>

                            <GridViewItem x:ConnectionId='7' Name="grdPlace2"                            >
                                <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                                    <Image Source="Assets/images (1).jpg" Height="70" Width="70" Stretch="Fill"/>
                                    <StackPanel Width="275" Margin="10">
                                        <TextBlock Text="Chemistry" FontWeight="Bold"/>
                                        <TextBlock Text="Chemistry questions asked in most competitive exams. " TextWrapping="Wrap" TextAlignment="Justify"/>
                                    </StackPanel>
                                </StackPanel>
